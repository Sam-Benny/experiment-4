//  largest 3 num in a array

#include<stdio.h>
void main()
{
    int n;
    printf("enter the size of array: ");
    scanf("%d",&n);
    int a[n],max[3]={0};
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]>max[0])
        {
            max[2]=max[1];
            max[1]=max[0];
            max[0]=a[i];
        }
        else if(a[i]>max[1])
        {
            max[2]=max[1];
            max[1]=a[i];
        }
        else if(a[i]>max[2])
        {
            max[2]=a[i];
        }
    }
    printf("%d %d %d",max[0],max[1],max[2]);
}
